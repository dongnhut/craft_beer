<h1 class="page-header"> Listing Categories</h1>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Table
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-lg-1 text-center" >#</th>
                                <th class="col-lg-3 text-center">Name</th>
                                <th class="col-lg-6 text-center">Description</th>
                                <th class="col-lg-2 text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tbody>
                          <% @categories.each do |category| %>
                            <tr>
                                <td><%= category.id %></td>
                                <td><%= category.name %></td>
                                <td><%= truncate category.description, length: 160 %></td>
                                <td>
                                    <%= link_to "Show", category, :class => "", :remote => true, "data-toggle" => "modal", "data-target" => "#myModal" %> |
                                    <%= link_to 'Edit', edit_category_path(category) %> |
                                    <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
                                </td>
                            </tr>
                          <% end %>
                        </tbody>
                            
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <%= paginate @categories %>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

<div id="category-modal"></div>

<%= link_to 'New Category', new_category_path, class: "btn btn-default" %>
