h1.page-header Listing Admin Members
- if notice
  .alert.alert-success
    = notice
.row
  .col-lg-12
    .panel.panel-default
      .panel-heading Table
      .panel-body
        .table-responsive
          table.table.table-striped.table-bordered.table-hover
            thead
              tr
                th.col-lg-1.text-center #
                th.col-lg-2.text-center Name
                th.col-lg-3.text-center Email
                th.col-lg-4.text-center Address
                th.col-lg-2.text-center Action
            tbody
              = render partial: "user", collection: @users
#category-modal
  = render "modal_show"
.row
  .pull-left
    .text-center
      = paginate @users
  .pull-right.pagination
    = link_to 'New User', new_user_path, class: "btn btn-default"
